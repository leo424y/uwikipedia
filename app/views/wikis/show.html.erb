<iframe id="ytplayer" type="text/html" width="100%" height="30" src="https://www.youtube.com/embed/<%= @uwiki %>?version=3&controls=0&showinfo=0&rel=0&loop=1&playlist=<%= @uwiki %>&cc_load_policy=1&autoplay=1" frameborder="0"></iframe>
<audio id="audio" autoplay="autoplay">
	<source src="<%= @audio %>.mp3" type="audio/mp3"/>
</audio>
<!-- <button onClick="document.getElementById('audio').play()">Play</button> <button onClick="document.getElementById('audio').pause()">Pause</button> -->

<!-- &disablekb=1 -->
<div class="video-background">
	<div class="video-foreground">
		<iframe src="https://www.youtube.com/embed/<%= @u %>?version=3&controls=0&showinfo=0&rel=0&loop=1&playlist=<%= @u %>&cc_load_policy=1&autoplay=1" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
	</div>
</div>

<div id="vidtop-content">
	<div class="vid-info">
		<h1><%= @title %></h1>
		<p><%= @summary %></p>
		<a href="<%= @fullurl %>" target="_blank">Full article</a>
	</div>
</div>
